FROM ollama/ollama:latest

# Update package lists and install system utilities
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install the Hugging Face CLI via pip
# Note: --break-system-packages is often required in newer Debian-based containers 
# when installing global pip packages outside of a virtual environment.
RUN pip3 install -U "huggingface_hub[cli]" --break-system-packages